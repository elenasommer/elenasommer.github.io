<nav class="navbar is-fixed-top is-black" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a href="/" title="{{ data.meta.person }}: {{ data.meta[locale].mainPage }}" class="logo">
            <img
                src="/img/logo/logo.svg"
                alt="{{ data.meta.person }}"
            />
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div class="navbar-menu">
        <div class="navbar-start">
        </div>

        <div class="navbar-end">
{% for link in data.nav[locale].links %}
            {% set url = ['/', locale, '/', link.url] | join %}
            <div class="navbar-item">
                <a href="{{ url | url }}" class="button is-ghost" title="{{ link.title }}">
                    {{ link.title }}
                </a>
            </div>
{% endfor %}
            <div class="navbar-item">
                <div class="buttons">
                    {% include 'i18n/switcher.njk' %}
                </div>
            </div>
        </div>
    </div>
</nav>
